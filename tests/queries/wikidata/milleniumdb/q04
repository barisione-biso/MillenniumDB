SELECT ?city, ?citylabel.string_value, ?mayorlabel.string_value, ?pop.amount
MATCH (?city)-[:P31]->(Q515),
      (?city)-[:P6]->(?mayor),
      (?city)-[:P1082]->(?pop),
      (?city)-[:Label]->(?citylabel),
      (?mayor)-[:Label]->(?mayorlabel)
LIMIT 100