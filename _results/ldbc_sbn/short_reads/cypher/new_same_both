MATCH (p1:Person)-[:WORK_AT]->(c:Organisation {type:"company"})<-[:WORK_AT]-(p2:Person)
MATCH (p1)-[:STUDY_AT]->(u:Organisation {type:"university"})<-[:STUDY_AT]-(p2)
RETURN
  p1.id,
  p2.id,
  c.id,
  u.id;

MATCH (p1:Person)-[:WORK_AT]->(c:Organisation {type:"company"})<-[:WORK_AT]-(p2:Person)
MATCH (p1)-[:STUDY_AT]->(u:Organisation {type:"university"})<-[:STUDY_AT]-(p2)
RETURN COUNT(*) as count