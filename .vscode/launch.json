                "${workspaceFolder}/test_files/graph_creation_example/nodes.txt", 
                "${workspaceFolder}/test_files/graph_creation_example/edges.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "windows": {
                "miDebuggerPath": "C:\\tools\\msys64\\mingw64\\bin\\gdb.exe",
            },
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
